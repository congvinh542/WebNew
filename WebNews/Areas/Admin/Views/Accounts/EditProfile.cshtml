@model WebNews.Models.Account

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
<ol class="breadcrumb slim-breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa hồ sơ cá nhân</li>
</ol>
<h6 class="slim-pagetitle">Chỉnh sửa hồ sơ cá nhân</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Accounts" asp-action="EditProfile" method="post">
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Tên người dùng: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="FullName" placeholder="Nhập tên của bạn">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Số điện thoại: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Phone" placeholder="Nhập số điện thoại của bạn">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-ground mg-b-10-force">
                        <label class="form-control-label">ẢNH ĐẠI DIỆN: <span class="tx-danger">*</span></label>
                        <input class="form-control-file" name="fThumb" type="file" asp-for="Thumb" />
                    </div>
                </div>
                <div class="form-layout-footer" style="margin-left:735px; margin-top:50px">
                    <button class="btn btn-primary bd-0">Lưu thông tin</button>
                    <button class="btn btn-secondary bd-0">Cancel</button>
                </div><!-- form-layout-footer -->
            </div><!-- form-layout -->
        </div>
    </form>
</div><!-- section-wrapper -->
