@model WebNews.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Danh sách bài viết</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa bài viết</li>
    </ol>
    <h6 class="slim-pagetitle">Tạo mới bài viết</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="CatId">
            </div><!-- col-4 -->
        </div><!-- form-layout -->

        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên người dùng:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="CatName">
            </div><!-- col-4 -->
        </div><!-- form-layout -->

        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Quyền truy cập:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="Description">
            </div><!-- col-4 -->
        </div><!-- form-layout -->
        <div style="text-align:right !important; margin-top:30px; border-radius:2px" class="form-layout-footer" mg-t-30>
            <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.CatId">
                <input type="hidden" asp-for="CatId">
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger">
                <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-success bd-0">Quay lại danh sách</a>
            </form>
        </div>
    </div><!-- section-wrapper -->
</div>