@model WebNews.Models.Role

@{
    ViewData["Title"] = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Danh sách quyền truy cập</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xem chi tiết quyền truy cập</li>
    </ol>
    <h6 class="slim-pagetitle">Xem chi tiết quyền truy cập</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleId">
            </div><!-- col-4 -->
        </div><!-- form-layout -->

        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên người dùng:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleName">
            </div><!-- col-4 -->
        </div><!-- form-layout -->

        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Quyền truy cập:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleDescription">
            </div><!-- col-4 -->
        </div><!-- form-layout -->
    </div><!-- section-wrapper -->
</div>
